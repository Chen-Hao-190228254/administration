<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.skm.exa.persistence.dao.CommonDao">
    <resultMap id="area" type="com.skm.exa.domain.bean.AreaBean">
        <id property="id" column="id"/>
        <result property="code" column="code"/>
        <result property="name" column="name"/>
        <result property="level" column="level"/>
        <result property="parentCode" column="parent_code"/>
    </resultMap>

<!--获取地址-->
    <select id="getAreaParentCode" resultMap="area">
        SELECT * FROM `administration_area` WHERE `parent_code` = #{code}
    </select>



<!--获取文件-->
    <resultMap id="file" type="com.skm.exa.domain.bean.FileBean">
        <id property="id" column="id"/>
        <result property="correlationId" column="correlation_id"/>
        <result property="name" column="name"/>
        <result property="imageId" column="image_id"/>
        <result property="size" column="size"/>
        <result property="md5" column="md5"/>
        <result property="correlationTableName" column="correlation_table_name"/>
        <result property="correlationId" column="correlation_id"/>
        <result property="applyTo" column="apply_to"/>
    </resultMap>
    <select id="getFileList" resultMap="file">
        SELECT
        *
        FROM
            `administration_image`
        WHERE
            `correlation_table_name` = #{correlationTableName}
        AND `correlation_id` IN (
        <foreach collection="correlationIds" item="id" separator=",">
            #{id}
        </foreach>
        )
    </select>



<!--添加文件信息-->
    <insert id="uploadFile" keyProperty="id" useGeneratedKeys="true">
        INSERT INTO `administration_image` (`name`, `url`, `size`, `md5`)
        VALUES(
           #{name},
           #{url},
           #{size},
           #{md5}
           )
    </insert>


<!--添加图片的关联信息-->
    <insert id="addFileCorrelation" keyProperty="id" useGeneratedKeys="true">
        UPDATE
            `administration_image`
        SET
            `correlation_table_name` = #{correlationTableName},
            `correlation_id` = #{correlationId},
            `apply_to` = #{applyTo}
        WHERE `id` IN(
                <foreach collection="fileId" item="id" index="index" separator=",">
                    #{id}
                </foreach>
            )

    </insert>






<!--删除文件-->
    <delete id="deleteFile">
        DELETE FROM `administration_image` WHERE `id` IN (
        <foreach collection="list" item="id" separator=",">
            #{id}
        </foreach>
        )
    </delete>





</mapper>